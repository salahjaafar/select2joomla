<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_SELECT2JOOMLA</name>
    <author>Salah JAAFAR</author>
    <creationDate>August 2024</creationDate>
    <copyright>(C) 2024 Salah JAAFAR. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>your.email@example.com</authorEmail>
    <authorUrl>www.example.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_SELECT2JOOMLA_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Plugin\System\Select2joomla</namespace>
    <files>
        <folder>src</folder>
        <folder>assets</folder>
        <folder>language</folder>
        <folder>services</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/plg_system_select2joomla.ini</language>
        <language tag="en-GB">en-GB/plg_system_select2joomla.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="use_cdn" 
                    type="radio" 
                    label="PLG_SYSTEM_SELECT2JOOMLA_FIELD_USE_CDN_LABEL"
                    description="PLG_SYSTEM_SELECT2JOOMLA_FIELD_USE_CDN_DESC"
                    default="1"
                    layout="joomla.form.field.radio.switcher"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
